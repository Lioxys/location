{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}
    <h1>Vehicule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicule.id }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ vehicule.marque }}</td>
            </tr>
            <tr>
                <th>Immatriculation</th>
                <td>{{ vehicule.immatriculation }}</td>
            </tr>
            <tr>
                <th>PrixJournalier</th>
                <td>{{ vehicule.prixJournalier }}</td>
            </tr>
        </tbody>
    </table>
    <hr>
    <h1>Commentaires</h1>
    {% for commentaire in vehicule.commentaires %}
    <table class="table">
        <tr>
            <th>Titre</th>
            <th>Contenu</th>
            <th>Auteur</th>
        </tr>
        <tr>
            <td>{{commentaire.titre}}</td>
            <td>{{commentaire.contenu}}</td>
            <td>{{commentaire.auteur.prenom}} {{commentaire.auteur.nom}}</td>
        </tr>
    </table>
    {% endfor %}
    <hr>
    <a href="{{ path('app_vehicule_index') }}" class="btn btn-dark">Retour Ã  la liste</a>
    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-dark">Editer</a>
    {% endif %}
    {{ include('vehicule/_delete_form.html.twig') }}
{% endblock %}
